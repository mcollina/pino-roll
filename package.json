{
  "name": "pino-roll",
  "version": "4.0.0",
  "description": "A Pino transport that automatically rolls your log files",
  "type": "module",
  "main": "dist/pino-roll.js",
  "types": "dist/pino-roll.d.ts",
  "exports": "./dist/pino-roll.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.base.json",
    "dev": "node --experimental-strip-types --test --watch 'test/**/*.test.ts'",
    "lint": "eslint",
    "typecheck": "tsc -p . --noEmit",
    "test": "npm run lint && npm run typecheck && node --experimental-strip-types --test --test-concurrency=1 'test/**/*.test.ts'",
    "test-only": "node --experimental-strip-types --test --test-concurrency=1 'test/**/*.test.ts'",
    "test-ci": "npm run lint && npm run typecheck && c8 --reporter=lcovonly node --experimental-strip-types --test --test-concurrency=1 'test/**/*.test.ts'",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcollina/pino-roll.git"
  },
  "keywords": [
    "pino",
    "transport"
  ],
  "author": "Damien Simonin Feugas <damien.feugas@gmail.com>",
  "contributors": [
    "Matteo Collina <hello@matteocollina.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "date-fns": "^4.1.0",
    "sonic-boom": "^4.0.1"
  },
  "devDependencies": {
    "@fastify/pre-commit": "^2.2.0",
    "@types/node": "^22.18.5",
    "c8": "^10.1.3",
    "eslint": "^9.33.0",
    "mockdate": "^3.0.5",
    "neostandard": "^0.12.2",
    "pino": "^10.0.0",
    "typescript": "^5.9.2"
  },
  "pre-commit": [
    "lint"
  ]
}
